<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DiceLoadingView">
        <attr name="animDuration" format="integer"></attr>
        <attr name="animInterpolator" >
            <flag name = "AccelerateDecelerateInterpolator" value = "0" />
            <flag name = "AccelerateInterpolator" value = "1" />
            <flag name = "DecelerateInterpolator" value = "2" />
            <flag name = "BounceInterpolator" value = "3" />
            <flag name = "CycleInterpolator" value = "4" />
            <flag name = "LinearInterpolator" value = "5" />
            <flag name = "AnticipateOvershootInterpolator" value = "6" />
            <flag name = "AnticipateInterpolator" value = "7" />
            <flag name = "OvershootInterpolator" value = "8" />
        </attr>
        <attr name="firstSideDiceNumber" format="integer"></attr>
        <attr name="firstSideDicePointColor" format="color|reference"></attr>
        <attr name="firstSideDiceBgColor" format="color|reference"></attr>
        <attr name="firstSideDiceBorderColor" format="color|reference"></attr>
        <attr name="secondSideDiceNumber" format="integer"></attr>
        <attr name="secondSideDicePointColor" format="color|reference"></attr>
        <attr name="secondSideDiceBgColor" format="color|reference"></attr>
        <attr name="secondSideDiceBorderColor" format="color|reference"></attr>
        <attr name="thirdSideDiceNumber" format="integer"></attr>
        <attr name="thirdSideDicePointColor" format="color|reference"></attr>
        <attr name="thirdSideDiceBgColor" format="color|reference"></attr>
        <attr name="thirdSideDiceBorderColor" format="color|reference"></attr>
        <attr name="fourthSideDiceNumber" format="integer"></attr>
        <attr name="fourthSideDicePointColor" format="color|reference"></attr>
        <attr name="fourthSideDiceBgColor" format="color|reference"></attr>
        <attr name="fourthSideDiceBorderColor" format="color|reference"></attr>
    </declare-styleable>

    <declare-styleable name="DiceView">
        <attr name="pointColor" format="color|reference"></attr>
        <attr name="borderColor" format="color|reference"></attr>
        <attr name="bgColor" format="color|reference"></attr>
        <attr name="numberValue" >
            <flag name = "one" value = "1" />
            <flag name = "two" value = "2" />
            <flag name = "three" value = "3" />
            <flag name = "four" value = "4" />
            <flag name = "five" value = "5" />
            <flag name = "six" value = "6" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DropdownTextView">
        <attr name="title_text" format="string" />
        <attr name="content_text" format="string" />
        <attr name="bg_drawable_regular" format="reference" />
        <attr name="bg_drawable_expanded" format="reference" />
        <attr name="arrow_drawable" format="reference" />
        <attr name="title_text_color" format="color" />
        <attr name="title_text_color_expanded" format="color" />
        <attr name="title_text_size" format="dimension" />
        <attr name="title_font" format="reference" />
        <attr name="content_text_size" format="dimension" />
        <attr name="content_text_color" format="color" />
        <attr name="link_text_color" format="color" />
        <attr name="underline_link" format="boolean" />
        <attr name="content_font" format="reference" />
        <attr name="expand_duration" format="integer" />
        <attr name="panel_padding" format="dimension" />
        <attr name="content_padding" format="dimension" />
    </declare-styleable>
</resources>
